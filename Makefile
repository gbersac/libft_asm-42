################################################################################
# BASIC VARIABLES															   #
################################################################################

export DEBUG		:= -g -O0
export NAME			:= test

################################################################################
# LIBRARY VARIABLES															   #
################################################################################

export DIR_FT		:= libfts

export DIR_LIB		:= $(DIR_FT)
APP					:= tests

################################################################################
# RULES																		   #
################################################################################

.PHONY: all $(APP) $(DIR_LIB)

all:  $(APP)
	@echo
	@rm -f $(NAME)
	@cp -n $(APP)/$(NAME) .

$(APP) $(DIR_LIB):
	@echo
	@echo \	MAKE $(RULE) in directory : $@
	@$(MAKE) --directory=$@  $(RULE)

$(APP): $(DIR_LIB)

$(LIB_DRAW): $(LIB_MATH)

prog:
	make re -C$(APP)
	@rm -f $(NAME)
	@cp -n $(APP)/$(NAME) .

clean:
	make RULE=clean

fclean:
	make RULE=fclean

re:
	make RULE=re

